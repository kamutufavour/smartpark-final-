<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#EFEEE9"
    tools:context=".registration">

    <TextView
        android:id="@+id/Tv_Signup"
        android:text="SIGN UP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="serif"
        android:layout_marginRight="90sp"
        android:layout_marginLeft="90sp"
        android:layout_marginBottom="50sp"
        android:textColorHint="@color/black"
        android:textSize="50sp"
        android:layout_marginTop="50sp"/>

    <EditText
        android:id="@+id/EditRegEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="20sp"
        android:ems="10"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:minHeight="50sp"
        android:background="@color/black"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        tools:layout_editor_editor_absoluteX="69dp"
        tools:layout_editor_editor_absoluteY="69dp"/>



    <EditText
        android:id="@+id/EditRegPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="20sp"
        android:ems="10"
        android:hint="Enter Passoword"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:minHeight="50sp"
        android:background="@color/black"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        tools:layout_editor_editor_absoluteX="69dp"
        tools:layout_editor_editor_absoluteY="69dp"/>


    <EditText
        android:id="@+id/EditConfPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="20sp"
        android:ems="10"
        android:hint="Confirm Passoword"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:minHeight="50sp"
        android:background="@color/black"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        tools:layout_editor_editor_absoluteX="69dp"
        tools:layout_editor_editor_absoluteY="69dp"/>

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="90sp"
        android:layout_marginRight="90sp"
        android:text="Sign Up"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/Tv_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="50sp"
        android:layout_marginRight="30sp"
        android:text="Already have an account.Forgot Password!"
        android:textColor="@color/black"
        android:textSize="16sp" />
</LinearLayout>